pipeline {
  agent any
  tools {
    org.jenkinsci.plugins.docker.commons.tools.DockerTool 'latest'
  }

   options {
    timeout(time: 2, unit: 'MINUTES')
  }

  stages {
    stage('Build') {
      steps {
        sh "cd webapp && docker build -t elbuo8/webapp:${env.BUILD_NUM}"
      }
    }
    stage('Run tests') {
      steps {
        sh 'cd webapp && docker run -it elbuo8/webapp:1 npm t'
      }
    }
  }
}
